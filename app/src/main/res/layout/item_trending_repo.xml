<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        android:id="@+id/ll_parent"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/civ_avatar"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_margin="8dp"/>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                <TextView
                        android:id="@+id/tv_author_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="username"/>

                <TextView
                        android:id="@+id/tv_repo_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="repo name"
                        android:textSize="24sp"
                        android:layout_marginTop="8dp"
                        android:textStyle="bold"/>

                <LinearLayout
                        android:id="@+id/ll_repo_item"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                    <TextView
                            android:id="@+id/tv_repo_description"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="description"/>

                    <LinearLayout
                            android:id="@+id/ll_attribute"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:layout_marginLeft="8dp"
                            android:layout_marginBottom="16dp"
                            android:orientation="horizontal">

                        <ImageView
                                android:id="@+id/iv_language_color"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="4dp"
                                android:layout_gravity="center"
                                android:src="@drawable/circle_language"/>

                        <TextView
                                android:id="@+id/tv_language"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="24dp"
                                android:text="Kotlin"/>

                        <ImageView
                                android:id="@+id/iv_star"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="4dp"
                                android:layout_gravity="center"
                                android:src="@drawable/star_yellow_16"/>

                        <TextView
                                android:id="@+id/tv_star_count"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="24dp"
                                android:text="14,312"/>

                        <ImageView
                                android:id="@+id/iv_fork"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="4dp"
                                android:layout_gravity="center"
                                android:src="@drawable/fork_black_16"/>

                        <TextView
                                android:id="@+id/tv_fork_count"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="9,622"/>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"/>

    </LinearLayout>

</LinearLayout>